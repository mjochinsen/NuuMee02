{
  "_version": "2.0",
  "_description": "NuuMee Subtitle Style Configuration - 3 curated styles for production",
  "_documentation": {
    "ASS_format": "Name,Fontname,Fontsize,PrimaryColour,SecondaryColour,OutlineColour,BackColour,Bold,Italic,Underline,StrikeOut,ScaleX,ScaleY,Spacing,Angle,BorderStyle,Outline,Shadow,Alignment,MarginL,MarginR,MarginV,Encoding",
    "colors": "ASS uses BGR format: &HAABBGGRR (AA=alpha, BB=blue, GG=green, RR=red). 00=opaque, FF=transparent",
    "animations": {
      "fade": "{\\fad(200,0)}",
      "pop": "{\\t(0,150,\\fscx130\\fscy130)\\t(150,300,\\fscx100\\fscy100)}"
    }
  },

  "default_style": "simple",
  "min_word_duration": 0.2,

  "styles": {
    "simple": {
      "name": "Simple",
      "description": "Clean white text with subtle glow - professional look",
      "is_multi_style": false,
      "animation": "fade",
      "ass_styles": [
        "Style: Default,Arial,72,&H00FFFFFF,&H000000FF,&H00000000,&H80000000,0,0,0,0,100,100,0,0,1,2,1,2,20,20,160,1"
      ],
      "style_names": ["Default"]
    },
    "rainbow_bounce": {
      "name": "Rainbow + Bounce",
      "description": "Colorful cycling text with pop animation - fun and energetic",
      "is_multi_style": true,
      "animation": "pop",
      "ass_styles": [
        "Style: Rainbow1,Arial,72,&H000080FF,&H000000FF,&H00000000,&H80000000,1,0,0,0,100,100,0,0,1,3,2,2,20,20,160,1",
        "Style: Rainbow2,Arial,72,&H0000FF80,&H000000FF,&H00000000,&H80000000,1,0,0,0,100,100,0,0,1,3,2,2,20,20,160,1",
        "Style: Rainbow3,Arial,72,&H0080FF00,&H000000FF,&H00000000,&H80000000,1,0,0,0,100,100,0,0,1,3,2,2,20,20,160,1",
        "Style: Rainbow4,Arial,72,&H00FF8000,&H000000FF,&H00000000,&H80000000,1,0,0,0,100,100,0,0,1,3,2,2,20,20,160,1"
      ],
      "style_names": ["Rainbow1", "Rainbow2", "Rainbow3", "Rainbow4"]
    },
    "bold_shine": {
      "name": "Bold Shine",
      "description": "Yellow text with glow effect - high visibility",
      "is_multi_style": false,
      "animation": "fade",
      "ass_styles": [
        "Style: Default,Verdana,72,&H0000FFFF,&H000000FF,&H00000000,&H80000000,1,0,0,0,100,100,0,0,1,1,3,2,20,20,160,1"
      ],
      "style_names": ["Default"]
    }
  }
}
